<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:id="@+id/main_backg">

    <dream.widget.SlideView
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         android:background="@color/background_color"
         android:orientation="vertical"
         android:id="@+id/introduce_slide_backg">

        <FrameLayout
             android:layout_height="match_parent"
             android:layout_width="match_parent"
             android:id="@+id/introduce_slide_title_card">

            <FrameLayout
                 android:layout_height="match_parent"
                 android:layout_width="match_parent">

                <ImageView
                     android:layout_height="match_parent"
                     android:layout_width="match_parent"
                     android:src="@drawable/illusory_world_of_the_mortals"
                     android:transitionName="logo_image"
                     android:id="@+id/introduce_logo_image" />

                <ImageView
                     android:layout_height="match_parent"
                     android:layout_width="match_parent"
                     android:src="@drawable/logo_original"
                     android:alpha="0"
                     android:id="@+id/introduce_logo_orig_image" />

            </FrameLayout>

            <LinearLayout
                 android:layout_height="match_parent"
                 android:layout_width="match_parent"
                 android:alpha="-255">

                <TextView
                     android:layout_height="match_parent"
                     android:layout_width="wrap_content"
                     android:gravity="left|center"
                     android:fontFamily="@font/bold_font"
                     android:textSize="30dp"
                     android:layout_marginLeft="60dp"
                     android:textColor="@color/title_text_color"
                     android:layout_weight="1"
                     android:text="@string/intr_title"
                     android:layout_gravity="left|center" />

                <dream.widget.NightHandoffView
                     android:layout_height="match_parent"
                     android:layout_width="60dp"
                     android:fontFamily="@font/fine_font"
                     android:text="@string/intr_title" />

            </LinearLayout>

        </FrameLayout>

        <ScrollView
             android:layout_height="match_parent"
             android:layout_width="match_parent"
             android:scrollbars="none"
             android:fadingEdgeLength="20dp">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:orientation="vertical">

                 <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="match_parent"
                     android:text="@string/app_name" />

            </LinearLayout>

        </ScrollView>

    </dream.widget.SlideView>

</LinearLayout>